<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"

    tools:context=".timeToSleep">


    <GridLayout
        android:id="@+id/cycles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="0"
            android:layout_gravity="center"
            android:layout_row="0"
            android:text="You should try to fall asleep at one of the following times:" />


        <Button
            android:id="@+id/cycle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_gravity="left"
            android:layout_row="1"
            android:text="00:00" />

        <Button
            android:id="@+id/cycle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_gravity="left"
            android:layout_row="1"

            android:text="00:00" />

        <Button
            android:id="@+id/cycle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="3"
            android:layout_gravity="left"
            android:layout_row="1"
            android:text="00:00" />

        <Button
            android:id="@+id/cycle4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="4"
            android:layout_gravity="left"
            android:layout_row="1"
            android:text="00:00" />

        <Button
            android:id="@+id/cycle5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_gravity="left"
            android:layout_row="2"
            android:text="00:00" />

        <Button
            android:id="@+id/cycle6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_gravity="left"
            android:layout_row="2"
            android:text="00:00" />
    </GridLayout>
</android.support.constraint.ConstraintLayout>